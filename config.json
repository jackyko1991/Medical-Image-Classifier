{
    "ProjectName": "Medical Image Classifier",
    "ProjectDetail": {
        "Description": "To detect intracranial hemorrhage types with convolution neural network classifier.",
        "Modality": "CT"
    },   
    "TrainingSetting": {
        "Data": {
            "TrainingDataDirectory":"./data/dataset/training",
            "TestingDataDirectory": "./data/dataset/testing",
            "ImageFilenames": ["image_brain_mni.nii"],
            "LabelFilename":"./data/dataset/labels.csv",
            "ClassNames":["IPH","SAH","SDH/EDH","IVH"]
        },
        "BatchSize": 10,
        "PatchShape": [91,109,91],
        "ImageLog": false,
        "Restore": true,
        "LogDir": "./tmp/log",
        "CheckpointDir": "./tmp/ckpt",
        "Network": {
            "Name":"LeNet",
            "Dropout":0.0
        },
        "Testing": true,
        "Epoches": 9999,
        "Optimizer":{
            "Name": "GradientDescent",
            "InitialLearningRate": 1e-4,
            "Momentum":0.9,
            "Decay":{
                "Factor": 0.01,
                "Step": 100
            }
        },
        "Spacing": [0.25,0.25,0.25]
    }
}

