{
    "ProjectName": "Medical Image Classifier",
    "ProjectDetail": {
        "Description": "To detect intracranial hemorrhage types with convolution neural network classifier.",
        "Modality": "CT"
    },   
    "TrainingSetting": {
        "Data": {
            "TrainingDataDirectory":"./data/example/training",
            "TestingDataDirectory": "./data/example/testing",
            "ImageFilenames": ["image_brain_mni.nii"],
            "LabelFilename":"./data/dataset/labels.csv",
            "ClassNames":["IPH","SAH","SDH+EDH","IVH"]
        },
        "BatchSize": 7,
        "PatchShape": [91,109,91],
        "ImageLog": false,
        "Restore": true,
        "LogDir": "./tmp/log",
        "CheckpointDir": "./tmp/ckpt",
        "Network": {
            "Name":"LeNet",
            "Dropout":0.1
        },
        "Testing": true,
        "Epoches": 100,
        "Optimizer":{
            "Name": "Momentum",
            "InitialLearningRate": 1e-3,
            "Momentum":0.9,
            "Decay":{
                "Factor": 0.01,
                "Step": 100
            }
        },
        "Spacing": [0.25,0.25,0.25]
    },
    "PredictionSetting":{
        "Data":{
            "EvaluationDataDirectory":"./data/example/evaluate",
            "ImageFilenames": ["image_brain_mni.nii"],
            "OutputFilename":"./data/example/prediction.csv"
        },
        "ModelPath": "./tmp/ckpt/checkpoint-00001.meta",
        "CheckPointPath": "./tmp/ckpt/checkpoint-00001"
    }
}

